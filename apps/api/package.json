{
  "name": "my-time-api",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "IS_OFFLINE=true SLS_STAGE=local tsx watch src/index.ts",
    "dev:local": "IS_OFFLINE=true SLS_STAGE=local tsx watch src/index.ts",
    "build": "tsup --config tsup.config.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "db:start": "docker-compose up -d",
    "db:stop": "docker-compose down",
    "db:create-tables": "tsx scripts/create-local-tables.ts",
    "db:delete-tables": "tsx scripts/delete-local-tables.ts",
    "db:reset": "pnpm db:delete-tables && pnpm db:create-tables",
    "local:start": "pnpm db:start && sleep 2 && pnpm db:create-tables && pnpm dev:local",
    "sls:offline": "pnpm build && serverless offline --stage local",
    "sls:deploy": "pnpm build && serverless deploy",
    "sls:deploy:prod": "pnpm build && serverless deploy --stage prod",
    "sls:remove": "serverless remove"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.500.0",
    "@aws-sdk/lib-dynamodb": "^3.500.0",
    "@hono/node-server": "^1.8.0",
    "aws-lambda": "^1.0.7",
    "hono": "^4.0.0",
    "jose": "^6.1.3"
  },
  "devDependencies": {
    "@my-time/eslint-config": "workspace:*",
    "@types/aws-lambda": "^8.10.133",
    "@types/node": "^20.11.17",
    "eslint": "^9.0.0",
    "globals": "^15.0.0",
    "serverless": "^3.38.0",
    "serverless-dynamodb": "^0.2.54",
    "serverless-offline": "^13.3.3",
    "tsup": "^8.0.2",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  }
}
